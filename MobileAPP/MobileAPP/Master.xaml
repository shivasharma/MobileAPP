<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAPP.Master" Title="Menu"  BackgroundColor="Black" Icon="menu.png">


  <StackLayout>

   
      <StackLayout Spacing="0" Padding="0" BackgroundColor="Black">
        <BoxView HorizontalOptions="FillAndExpand" HeightRequest="100" VerticalOptions="Start" Color="Black"/>
        <Label Text="MSTL" FontSize="25" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"  TextColor="White"/>
        <Image Source="logo.png"  HorizontalOptions="Center"  WidthRequest="80" HeightRequest="80"/>
        <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="Black" Padding="5">
          <StackLayout Spacing="0" BackgroundColor="Black" Orientation="Horizontal" HorizontalOptions="Start">
            <Button Image="home_icon.png" BorderColor="Black" BackgroundColor="Black" ></Button>
            <Button x:Name="buttonHome" Text="HOME" TextColor="White" BorderRadius="30" FontAttributes="Bold"  BackgroundColor="Black"/>
          </StackLayout>
        </StackLayout>
        <BoxView Color="White" WidthRequest="200" HeightRequest="2" HorizontalOptions="CenterAndExpand"/>
      </StackLayout>




  <StackLayout Spacing="0" Padding="0" BackgroundColor="Black">
       <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="Black" Padding="5">
      <StackLayout Spacing="0" BackgroundColor="Black" Orientation="Horizontal" HorizontalOptions="Start">
        <Button Image="about.png" BorderColor="Black" BackgroundColor="Black" ></Button>
        <Button x:Name="buttonAbout" Text="ABOUT US" TextColor="White" BorderRadius="30" FontAttributes="Bold"  BackgroundColor="Black"/>
      </StackLayout>
    </StackLayout>
    <BoxView Color="White" WidthRequest="200" HeightRequest="2" HorizontalOptions="CenterAndExpand"/>
  </StackLayout>



  <StackLayout Spacing="0" Padding="0" BackgroundColor="Black">
    <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="Black" Padding="5">
      <StackLayout Spacing="0" BackgroundColor="Black" Orientation="Horizontal" HorizontalOptions="Start">
        <Button Image="service.png" BorderColor="Black" BackgroundColor="Black" ></Button>
        <Button x:Name="buttonService" Text="SERVICES" TextColor="White" BorderRadius="30" FontAttributes="Bold"  BackgroundColor="Black"/>
      </StackLayout>
    </StackLayout>
    <BoxView Color="White" WidthRequest="200" HeightRequest="2" HorizontalOptions="CenterAndExpand"/>
  </StackLayout>

  <StackLayout Spacing="0" Padding="0" BackgroundColor="Black">
    <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="Black" Padding="5">
      <StackLayout Spacing="0" BackgroundColor="Black" Orientation="Horizontal" HorizontalOptions="Start">
        <Button Image="contact.png" BorderColor="Black" BackgroundColor="Black" ></Button>
        <Button x:Name="buttonContact" Text="CONTACT" TextColor="White" BorderRadius="30" FontAttributes="Bold"  BackgroundColor="Black"/>
      </StackLayout>
    </StackLayout>
    <BoxView Color="White" WidthRequest="200" HeightRequest="2" HorizontalOptions="CenterAndExpand"/>
  </StackLayout>


  <!--<Button x:Name="buttonAbout" Text="ABOUT US" TextColor="White" BorderRadius="30" FontAttributes="Bold"  BackgroundColor="Black"/>
