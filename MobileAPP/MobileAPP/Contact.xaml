<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSTL.Contact" Title="Contact Us"  BackgroundColor="#e4e9ee" Icon="logo.png">

  <ScrollView>
    <Grid RowSpacing="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <!--  background colors  -->
      <BoxView Grid.Row="0" Color="#3A444D" />
      <BoxView Grid.Row="1" Color="#F1F2F2" />

      <!--  header content  -->
      <ContentView Grid.Row="0" HorizontalOptions="StartAndExpand" Padding="10" VerticalOptions="CenterAndExpand">
        <StackLayout Orientation="Horizontal">
          <Image Source="contact.png" />
          <Label FontSize="Large" HorizontalOptions="StartAndExpand" Text="CONTACT US"
                 TextColor="White" VerticalOptions="StartAndExpand" />
        </StackLayout>
      </ContentView>


      <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="StartAndExpand" Padding="10" VerticalOptions="StartAndExpand">
        <Grid VerticalOptions="FillAndExpand" BackgroundColor="White" Padding="5">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
  
            <Grid BackgroundColor="#fff" Grid.Column="1">
              <Entry x:Name="name" Placeholder="Name" Grid.Row="0" Grid.Column="0" BackgroundColor="#3A444D"  FontSize="14" Margin="10,10,10,10"  TextColor="White" WidthRequest="200"></Entry>
            </Grid>

          </Grid>
        </Grid>


        <Grid VerticalOptions="FillAndExpand" BackgroundColor="White" Padding="5">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid BackgroundColor="#fff" Grid.Column="1">
              <Entry  x:Name="email" Placeholder="Email" Grid.Row="0" Grid.Column="0" BackgroundColor="#3A444D"  FontSize="14" Margin="10,10,10,10"  TextColor="White" WidthRequest="200"></Entry>
            </Grid>

          </Grid>
        </Grid>


        <Grid VerticalOptions="FillAndExpand" BackgroundColor="White" Padding="5">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid BackgroundColor="#fff" Grid.Column="1">
              <Entry x:Name="message" Placeholder="Message" Grid.Row="0" Grid.Column="0" BackgroundColor="#3A444D"  FontSize="14" Margin="10,10,10,10"  TextColor="White" WidthRequest="200" HeightRequest="200"></Entry>
            </Grid>

          </Grid>
        </Grid>

        <Grid VerticalOptions="FillAndExpand" BackgroundColor="White" Padding="5">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid BackgroundColor="#fff" Grid.Column="1">
              <Button Text="Send" Grid.Column="0" Grid.Row="0"  TextColor="White" BackgroundColor="#e91e63" Clicked="Button_OnClicked"></Button>
            </Grid>

          </Grid>
        </Grid>
      </StackLayout>



      <!--  Page Content  -->

    </Grid>


  </ScrollView>



