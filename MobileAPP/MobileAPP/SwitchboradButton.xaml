<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSTL.SwitchboradButton">


    <StackLayout Orientation="Vertical" Padding="10" Margin="20">

        <Image x:Name="SwitchboardIcon" HorizontalOptions="Center" Source="{Binding Icon}" />
        <Label x:Name="SwitchboardLabel" HorizontalOptions="Center"
               Text="{Binding Label}"
               TextColor="#3A444D"
               FontSize="20" FontAttributes="Bold" />
    </StackLayout>

</ContentView>